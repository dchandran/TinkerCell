FILE( GLOB LPSOLVE_SRC *.c )

ADD_SUBDIRECTORY( colamd )
ADD_SUBDIRECTORY( shared )
ADD_SUBDIRECTORY( bfp )

ADD_LIBRARY( lpsolve
  SHARED
  ${LPSOLVE_SRC}
  ${LPSOLVE_COLAMD_SRC}
  ${LPSOLVE_BFP_SRC}
  ${LPSOLVE_BFPLUSOL_SRC}
  ${LUSOL_SRC}
  ${LPSOLVE_SHARED_SRC}
)

TARGET_LINK_LIBRARIES( lpsolve
)
